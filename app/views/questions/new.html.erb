<h1>Ask a question</h1>

<%= form_for @question do |f| %>
  <%= render partial: 'shared/error_summary', locals: { errors: @question.errors } %>

  <div class="field">
    <%= f.label :title, class: 'field-label' %>
    <%= f.text_field :title, class: 'field-input' %>
  </div>
  <div class="field">
    <%= f.label :body, class: 'field-label' %>
    <%= f.text_area :body, class: 'field-input', required: true %>
  </div>
  <div>
    <%= f.submit 'Submit' %>
  </div>
<% end %>
